pipeline {
    agent any

    stages {
        stage('Git Clone Repository') {
            steps {
                // Clone the repository into /home/ubuntu
              
                sh 'git clone https://github.com/anjurusatheesh/pandu.git'
            }
        }

        stage('Docker Build Image') {
            steps {
                script {
                    dir('/var/lib/jenkins/workspace/first_job_pipeline/pandu') {
                        sh 'sudo docker build -t httpd .'
                    }
                }
            }
        }

        stage('Docker Run Container') {
            steps {
                script {
                    sh 'sudo docker run -d -p 80:80 httpd'
                }
            }
        }
    }
}
